{
    "compilerOptions": {
        "lib": [
            "ES2018",
            "DOM",
            "ES2019.String"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./build",
        "strict": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
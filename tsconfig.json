{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "module": "commonjs",
    "downlevelIteration": true,
    "lib": ["ES2018", "DOM", "ES2019.String", "ES2019.Array"],
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types/system"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src"]
}
